pr_rules:
  - name: Cool Rule
    when:
      - attribute: label
        operator: equal
        not: true
        value: documentation
    require:
      - attribute: approvedCount
        operator: greaterThanOrEqual
        value: 1
      - attribute: linesAdded
        operator: lessThanOrEqual
        value: 1
  - name: Config Change Rule
    when:
      - attribute: label
        operator: equal
        value: high-risk
    require:
      - attribute: approvedCount
        operator: greaterThanOrEqual
        value: 2
  - name: Security Review
    when:
      - attribute: label
        operator: equal
        value: security-risk
    require:
      - attribute: approvedByTeam
        operator: contains
        value: security
